#!/bin/sh

ROOT=$HOME/git
GRAAL=$ROOT/graal
TRUFFLE=$ROOT/graal/truffle
SVM=$GRAAL/substratevm
VMX86=$ROOT/vmx86

(cd $SVM && mx native-image \
		--tool:truffle \
		-da \
		-H:MaxRuntimeCompileMethods=10000 \
		-H:Name=$VMX86/vmx86-svm \
		-H:CLibraryPath=$VMX86/mxbuild/linux-amd64/VMX86_GRAALVM_SUPPORT/clibraries/linux-amd64 \
		-Djvmci.class.path.append=$GRAAL/compiler/mxbuild/dists/jdk9/graal.jar \
		-Dgraal.TruffleCompilationExceptionsArePrinted=true \
		-Dgraal.ExitVMOnException=true \
		-cp $GRAAL/sdk/mxbuild/dists/jdk9/graal-sdk.jar:$TRUFFLE/mxbuild/dists/jdk9/truffle-api.jar:$TRUFFLE/mxbuild/dists/jdk9/truffle-nfi.jar:$VMX86/lib/core.jar:$VMX86/lib/posix.jar:$VMX86/build/vmx86.jar:$VMX86/build/memory-svm.jar \
		org.graalvm.vm.x86.AMD64VM)
